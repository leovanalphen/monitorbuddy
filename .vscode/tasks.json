{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go build (ucrt64)",
      "type": "shell",
      "command": "go",
      "args": ["build","-v","-o","monitorbuddy.exe","./cmd/monitorbuddy"],
      "options": {
        "env": {
          "PATH": "C:/msys64/ucrt64/bin:${env:PATH}",
          "CGO_ENABLED": "1",
          "CC": "C:/msys64/ucrt64/bin/gcc.exe",
          "CXX": "C:/msys64/ucrt64/bin/g++.exe",
          "CGO_LDFLAGS": "-lsetupapi"
        }
      },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "go clean cache",
      "type": "shell",
      "command": "go",
      "args": ["clean", "-cache"]
    }
  ]
}
